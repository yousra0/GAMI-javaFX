<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="598.0" prefWidth="516.0" spacing="10" style="-fx-background-color: #0e8389;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nalu.gami2.UserProfileController">
    <ImageView fx:id="profileImageView" fitHeight="124.0" fitWidth="146.0" preserveRatio="true" />

    <Label style="-fx-font-weight: bold;" text="Nom" textFill="WHITE">
      <font>
         <Font name="System Bold" size="20.0" />
      </font>
    </Label>
    <TextField fx:id="nameField" alignment="CENTER" />

    <Label style="-fx-font-weight: bold;" text="Prénom" textFill="WHITE">
      <font>
         <Font name="System Bold" size="20.0" />
      </font>
    </Label>
    <TextField fx:id="prenomField" alignment="CENTER" />

    <Label style="-fx-font-weight: bold;" text="Email" textFill="WHITE">
      <font>
         <Font name="System Bold" size="20.0" />
      </font>
    </Label>
    <TextField fx:id="emailField" alignment="CENTER" />

    <Label style="-fx-font-weight: bold;" text="Date de Naissance" textFill="WHITE">
      <font>
         <Font name="System Bold" size="20.0" />
      </font>
    </Label>
    <TextField fx:id="datenaiField" alignment="CENTER" />

    <Label style="-fx-font-weight: bold;" text="Pays" textFill="WHITE">
      <font>
         <Font name="System Bold" size="20.0" />
      </font>
    </Label>
    <TextField fx:id="paysField" alignment="CENTER" />

    <Button fx:id="editButton" onAction="#handleEditAction" text="Modifier" />
   <Button mnemonicParsing="false" onAction="#logout" text="Se déconnecter" />
</VBox>
