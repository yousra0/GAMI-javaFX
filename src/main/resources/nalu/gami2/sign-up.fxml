<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<GridPane fx:controller="nalu.gami2.SignUpController" alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets top="25" right="25" bottom="10" left="25" />
    </padding>
    <!-- Form Input Fields -->
    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Nom:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="nomField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="PrÃ©nom:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="prenomField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Pays:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="paysField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Date de Naissance (AAAA-MM-JJ):" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <TextField fx:id="datenaiField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Label text="Profil Photo (URL):" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <TextField fx:id="pprofileField" GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <!-- Buttons -->
    <Button text="Sign Up" onAction="#handleSignUp" GridPane.columnIndex="1" GridPane.rowIndex="7" />
    <Button text="Already have an account? Sign in" onAction="#handleGoToSignIn" GridPane.columnIndex="1" GridPane.rowIndex="8" />
</GridPane>
